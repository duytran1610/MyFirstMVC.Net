@model MyFirstApp.Models.ProductModel

@{
    Layout = "_Layout";
    var product = ViewData["product"] as ProductModel;
}

<p>@ViewData["Title"]</p>
<div style="card bg-danger text-white">
    <h1 class="card-header">Xin chao @product.Name</h1>
    <div class="card-body">
        <p class="card-text">
            Price: @product.Price
        </p>
    </div>
</div>